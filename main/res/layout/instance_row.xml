<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:cardView_id="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView_id"
    android:layout_marginTop="5dp"
    android:elevation="10dp"
    cardView_id:cardBackgroundColor="@color/lightGrey"
    cardView_id:cardCornerRadius="10dp"
    android:layout_marginBottom="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:id="@+id/instanceRow_background"
        android:background="@drawable/selector_row"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal" >
        <View android:layout_width="40dp"
            android:id="@+id/status_color"
            android:layout_height="40dp"
            android:background="@drawable/circle_green"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="INSTANCE"
            android:textStyle="bold"
            android:id="@+id/textView_instance_name"
            android:textColor="@color/cyan"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/status_color"
            android:layout_toEndOf="@+id/status_color"
            android:layout_marginLeft="33dp"
            android:layout_marginStart="33dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="IP ADDRESS"
            android:id="@+id/textView_instance_ipaddr"
            android:layout_marginStart="10dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/cyan"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="RUNNING TIME"
            android:textColor="@color/cyan"
            android:id="@+id/textView_instance_running_time"
            android:layout_below="@+id/textView_instance_ipaddr"
            android:layout_alignRight="@+id/textView_instance_ipaddr"
            android:layout_alignEnd="@+id/textView_instance_ipaddr" />

    </RelativeLayout>


</android.support.v7.widget.CardView>